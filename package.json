{
  "name": "nimebox-api",
  "version": "0.4.0",
  "private": true,
  "description": "Nimebox RESTful API",
  "main": "./dist/index",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vc dev",
    "build-ts": "cross-env NODE_ENV=production tsc",
    "watch-ts": "cross-env NODE_ENV=development tsc -w",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "prettier --write \"src/**/*.ts*\" && eslint src/**/*.ts* --ext .js,.ts --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test-coverage": "cross-env NODE_ENV=test jest --coverage",
    "test-debug": "node --inspect node_modules/.bin/jest --runInBand"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "contributors": [
    "pcpl2",
    "selfisekai"
  ],
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "got": "^11.8.2",
    "jsdom": "^17.0.0",
    "koa": "^2.13.3",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-logger": "^3.2.1",
    "koa-pino-logger": "^3.0.0",
    "lodash": "^4.17.21",
    "pino": "^6.13.3",
    "pino-multi-stream": "^5.3.0",
    "pino-pretty": "^7.0.1",
    "qs": "^6.10.1",
    "tough-cookie": "^4.0.0",
    "x-ray": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/jsdom": "^16.2.13",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-pino-logger": "^3.0.0",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.3",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}