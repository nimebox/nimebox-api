{
  "name": "nimebox-api",
  "version": "0.2.0",
  "private": true,
  "description": "Nimebox RESTful API",
  "main": "./dist/index",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development npm run lint && ts-node src/index.ts",
    "build": "cross-env NODE_ENV=production shx rm -rf dist && npm run build-ts",
    "serve": "node ./dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "contributors": [
    "pcpl2"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "fastify": "^1.13.3",
    "fastify-bearer-auth": "^3.0.1",
    "fastify-circuit-breaker": "^0.1.0",
    "fastify-compress": "^0.7.1",
    "fastify-helmet": "^3.0.0",
    "grabbi": "^0.1.3",
    "lodash": "^4.17.11",
    "lokijs": "^1.5.5",
    "node-schedule": "^1.3.1",
    "q": "^1.5.1",
    "qs": "^6.6.0",
    "remeda": "^0.0.8",
    "x-ray": "^2.3.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "dotenv-safe": "^6.1.0",
    "jest": "^23.6.0",
    "shx": "^0.3.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
