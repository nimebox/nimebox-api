{
    "name": "nimebox-api",
    "version": "0.2.0",
    "private": true,
    "description": "Nimebox RESTful API",
    "main": "./dist/index",
    "scripts": {
        "start": "npm run serve",
        "dev": "cross-env NODE_ENV=development npm run tslint && ts-node src/index.ts",
        "build": "cross-env NODE_ENV=production npm run tslint && shx rm -rf dist && npm run build-ts",
        "serve": "node ./dist/index.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --forceExit --verbose"
    },
    "author": "xdk78 <xdk78@interia.pl>",
    "contributors": [
        "pcpl2"
    ],
    "license": "MIT",
    "dependencies": {
        "axios": "^0.18.0",
        "cors": "^2.8.4",
        "fastify": "^1.9.0",
        "fastify-bearer-auth": "^3.0.1",
        "fastify-circuit-breaker": "^0.1.0",
        "fastify-compress": "^0.6.0",
        "fastify-helmet": "^1.0.3",
        "grabbi": "^0.1.1",
        "lodash": "^4.17.10",
        "lokijs": "^1.5.5",
        "node-schedule": "^1.3.0",
        "q": "^1.5.1",
        "qs": "^6.5.2",
        "x-ray": "^2.3.3"
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "@types/node": "^10.5.4",
        "cross-env": "^5.2.0",
        "dotenv-safe": "^6.0.0",
        "jest": "^23.4.2",
        "shx": "^0.3.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.0.1",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "tslint-config-standard": "^7.1.0",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
